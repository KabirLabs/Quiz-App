            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q3d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_3d" />

        </RadioGroup>

        <LinearLayout
            android:background="#cdb79e"
            android:layout_margin="16dp"
            android:id="@+id/question_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_4"/>

            <CheckBox
                android:paddingLeft="8dp"
                android:id="@+id/Q4a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_4a"/>

            <CheckBox
                android:paddingLeft="8dp"
                android:id="@+id/Q4b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_4b"/>

            <CheckBox
                android:paddingLeft="8dp"
                android:id="@+id/Q4c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_4c"/>

            <CheckBox
                android:paddingLeft="8dp"
                android:id="@+id/Q4d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_4d"/>

        </LinearLayout>

        <RadioGroup
            android:background="#cdb79e"
            android:layout_margin="16dp"
            android:id="@+id/question_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_5"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q5a"
                android:layout_width="match_parent"
