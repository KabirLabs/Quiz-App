            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q6c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_6c"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q6d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_6d"/>

        </RadioGroup>

        <LinearLayout
            android:background="#cdb79e"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_7"/>

            <EditText
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:id="@+id/Q7"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:background="#cdb79e"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_8"/>

            <EditText
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:id="@+id/Q8"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <Button
                android:background="#836d54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_button_text"
                android:onClick="showScore"/>

            <Button
                android:background="#836d54"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_button_text"
                android:onClick="sendResult"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>