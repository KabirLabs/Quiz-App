<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eed5b7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/examinee_name"
            android:textSize="30sp"/>

        <EditText
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/examinee_name"
            android:background="#ccbdbd"
            android:inputType="textPersonName"
            android:hint="@string/name_hint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/examinee_number"
            android:textSize="30sp"/>

        <EditText
            android:layout_marginRight="16dp"
            android:id="@+id/examinee_num"
            android:background="#ccbdbd"
            android:inputType="number"
            android:hint="@string/nexam_number_hint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <RadioGroup
            android:background="#cdb79e"
            android:layout_margin="16dp"
            android:id = "@+id/question_1"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content">

            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "@string/question_1"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id = "@+id/Q1a"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "@string/answer_1a"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id = "@+id/Q1b"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "@string/answer_1b"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id = "@+id/Q1c"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "@string/answer_1c"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id = "@+id/Q1d"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "@string/answer_1d"/>

        </RadioGroup>

        <RadioGroup
            android:background="#cdb79e"
            android:layout_margin="16dp"
            android:id="@+id/question_2"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content">

            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text = "@string/question_2"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q2a"
                android:layout_width ="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_2a"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_2b"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q2c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_2c"/>

            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q2d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_2d"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/question_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#cdb79e">

            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_3" />

            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_3a" />

            <RadioButton
                android:paddingLeft="8dp"
                android:id="@+id/Q3b"
                android:layout_width="match_parent"
